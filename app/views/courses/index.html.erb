<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table id='title' class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Interest</th>
      <th>Code</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td class="td" id="td"><%= course.title %></td>
        <td>
          <% interest = current_person.interests.where(course: course).first %>
          <% if interest %>
            <button class="btn btn-link btn-like active" data-interest-id="<%= interest.id %>" data-course-id="<%= course.id %>">
              <span class="glyphicon glyphicon-heart"></span>
              <span class="interests-count">
                <%= course.interests.count %>
              </span>
            </button>
          <% else %>
            <button class="btn btn-link btn-like" data-course-id="<%= course.id %>">
              <span class="glyphicon glyphicon-heart"></span>
              <span class="interests-count">
                <%= course.interests.count %>
              </span>
            </button>
          <% end %>
        </td>
        <td><%= course.code %></td>
        <td><%= course.teacher %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: "btn btn-info" %>
